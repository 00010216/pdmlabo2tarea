<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.kcruz.tennismatch.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Federer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/federer"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/scoreFederer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="112sp" />

                <Button
                    android:id="@+id/btnF_15"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="#01579B"
                    android:textColor="#ffff"
                    android:layout_margin="6dp"
                    android:text="15" />

                <Button
                    android:id="@+id/btnF_30"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="#01579B"
                    android:textColor="#ffff"
                    android:layout_margin="6dp"
                    android:text="30" />

                <Button
                    android:id="@+id/btnF_40"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_margin="6dp"
                    android:background="#01579B"
                    android:text="40"
                    android:textColor="#ffff"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="24dp"
                android:orientation="vertical">

                <View
                    android:layout_width="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:background="#000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/murray"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/scoreMurray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textSize="112sp" />

                <Button
                    android:id="@+id/btnM_15"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="#01579B"
                    android:textColor="#ffff"
                    android:layout_margin="6dp"
                    android:text="15"/>

                <Button
                    android:id="@+id/btnM_30"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="#01579B"
                    android:textColor="#ffff"
                    android:layout_margin="6dp"
                    android:text="30"/>

                <Button
                    android:id="@+id/btnM_40"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:background="#01579B"
                    android:textColor="#ffff"
                    android:layout_margin="6dp"
                    android:text="40"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_reset"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:background="#DD2C00"
                android:text="@string/limpiar"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>